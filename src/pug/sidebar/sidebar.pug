mixin sidebar(activeVal, activeChild, level="../")
  .sidebar
    include sidebar-header
    .sidebar-wrapper
      ul.list-menu
        li.header MAIN NAVIGATION
        li.has-children(class= activeVal==="dashboards" ? "active" : "")
          a(href="javascript:;")
            i(class="la la-dashboard")
            span Dashboards
            .right-container
              i(class= activeVal==="dashboards" ? "la la-chevron-down tree-icon" : "la la-chevron-right tree-icon")
          ul.tree
            li.tree-item
              a(class= activeChild==="ecommerce" ? "active" : "", href=level + "dashboards/ecommerce.html")
                i(class="la la-circle")
                span Ecommerce
            li.tree-item
              a(class= activeChild==="iot" ? "active" : "", href=level + "dashboards/iot.html")
