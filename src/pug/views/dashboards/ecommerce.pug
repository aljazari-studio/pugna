          .row
            .col-md-8
              .box
                .box-header
                  h3 Invoices
                  .toolbox
                    a
                      i.la.la-print
                .box-body.pt-0.px-0.responsive
                  table
                    thead
                      tr
                        th Invoice ID
                        th Customer
                        th Status
                        th Due Date
                        th Action
                    tbody
                      each val in [{id: "79012370123", customer: "John Doe", status: "Paid", date: "January 2, 2019"}, {id: "72063370192", customer: "Jill Doe", status: "Unpaid", date: "January 3, 2019"}, {id: "79032370849", customer: "Jane Doe", status: "Paid", date: "January 3, 2019"}]
                        tr
                          td=val.id
                          td=val.customer
                          td
                            if val.status == "Paid"
                              label.badge.badge-green Paid
                            else 
                              label.badge.badge-red  Unpaid
                          td=val.date
                          td 
